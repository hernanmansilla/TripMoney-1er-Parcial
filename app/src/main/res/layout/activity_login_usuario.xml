<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/usuario_login"
        android:layout_width="229dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="229dp"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:text="" />

    <Button
        android:id="@+id/aceptar_login"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="161dp"
        android:text="LOGIN" />

    <Button
        android:id="@+id/registrar_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Registrate_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="REGISTRAR" />

    <TextView
        android:id="@+id/Usuario_text"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_above="@+id/usuario_login"
        android:layout_alignStart="@+id/usuario_login"
        android:layout_marginBottom="-141dp"
        android:text="USUARIO:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Contraseña_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/password_login"
        android:layout_alignStart="@+id/usuario_login"
        android:text="CONTRASEÑA:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Registrate_text"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="22dp"
        android:text="Si no posee una cuenta, registrese:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

</RelativeLayout>