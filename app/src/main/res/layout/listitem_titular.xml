<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ListaNombre_usuario"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Afavor_text"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ListaNombre_usuario"
        android:layout_toStartOf="@+id/ListaAfavor_usuario"
        android:text="A FAVOR:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#309d41"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/ListaAfavor_usuario"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ListaNombre_usuario"
        android:layout_toStartOf="@+id/Debe_text"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/Debe_text"
        android:layout_width="74dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ListaNombre_usuario"
        android:layout_marginEnd="66dp"
        android:text="DEBE:"
        android:textAlignment="center"
        android:textColor="#fa0d11"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ListaDebe_usuario"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:layout_below="@+id/ListaNombre_usuario"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/Debe_text" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="294dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

</RelativeLayout>